{
  "name": "kuberbank-backend",
  "version": "1.0.0",
  "description": "KuberBank Backend API - Kubernetes-native banking platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "test:integration": "jest --testMatch='**/__tests__/**/integration.test.js' --runInBand",
    "test:ci": "jest --ci --coverage --runInBand --forceExit --testPathIgnorePatterns=integration.test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\""
  },
  "keywords": [
    "kubernetes",
    "banking",
    "api",
    "postgres",
    "prometheus",
    "gitops"
  ],
  "author": "Hamza Qureshi",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "reports/junit",
        "outputName": "junit.xml"
      }]
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/__tests__/**",
      "!**/jest.config.js",
      "!**/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}